@model List<Variant>

@{
    ViewData["Title"] = "Калькулятор";
}

<div class="text-center">
    <h2 class="display-6">Список вариантов</h2>
    <p>
        <button class="btn btn-primary" onclick="location.href='/home/calculate';">Новый вариант</button>
    </p>
    @if (Model.Count > 0)
    {
        <table class="table table-striped">
            <tr>
                <th>Номер варианта</th>
                <th>Название варианта</th>
                <th>Число 1</th>
                <th>Операция</th>
                <th>Число 2</th>
                <th>Результат</th>
                <th>Действия</th>
            </tr>
            @foreach (Variant variant in Model)
            {
                <tr>
                    <td>@variant.Id</td>
                    <td>@variant.Name</td>
                    <td>@variant.Value1</td>
                    <td>@variant.Operation</td>
                    <td>@variant.Value2</td>
                    <td>@variant.Result</td>
                    <td>
                        <a href="/home/delete/?id=@variant.Id">Удалить</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <label>Нет доступных вариантов для показа.</label>
    }
</div>
